RULEBLOCK blok1
	AND : MIN;			// za konjunkciju se koristi minimum (samim tim sa za disjunkciju koristi maksimum)
	ACT : MIN;			// za zakljuƒçivanje (implikaciju) je izabran minimum (Mamdani implikacija) (osim MIN koristi se i PROD)
	ACCU : MAX;			// za kompoziciju je izabran maksimum (osim MAX koristi se i SUM)

	RULE 1 : IF redCellCount IS low THEN anemia IS visoka;
	RULE 2 : IF hemoglobin IS low THEN anemia IS visoka;
	RULE 3 : IF hematocrit IS low THEN anemia IS visoka;
	RULE 4 : IF redCellCount IS high THEN  heart_desease IS visoka;
    RULE 5 : IF hemoglobin IS high THEN heart_desease IS visoka;
    RULE 6 : IF hematocrit IS high THEN heart_desease IS visoka;
    RULE 7 : IF redCellCount IS high THEN polycythemia_vera IS visoka;
    RULE 8 : IF hemoglobin IS high THEN polycythemia_vera IS visoka;
    RULE 9 : IF hematocrit IS high THEN polycythemia_vera IS visoka;
    RULE 10 : IF whiteBloodCellCount IS low THEN cancer IS visoka;
    RULE 11 : IF whiteBloodCellCount IS low THEN autoimune IS visoka;
    RULE 12 : IF whiteBloodCellCount IS low THEN autoimune IS visoka;
    RULE 13 : IF whiteBloodCellCount IS high THEN infections IS visoka;

END_RULEBLOCK

END_FUNCTION_BLOCK

